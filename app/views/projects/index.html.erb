<% if signed_in? %>
  <div class="admin">
    <%= link_to 'New project', new_project_path %>
  </div>
<% end %>
<div class="c width_300">
  <% @projects.each_index do |i| %>
    <% if i.even? %>
      <% if signed_in? %>
        <div class="admin_panel" style="margin-left:220px;">
          <%= link_to 'Edit', edit_project_path(@projects[i]), :class => 'admin_control' %>
          <%= link_to 'Destroy', @projects[i], :confirm => 'Are you sure?', :method => :delete, :class => 'admin_control' %>
        </div>
      <% end %>
      <%= link_to image_tag(Picture.find(@projects[i].picture_id).data.url(:medium)), @projects[i] %>
    <% end %>
  <% end %> 
</div>
<div class="c width_300">
  <% @projects.each_index do |i| %>
    <% if i.odd? %>
      <% if signed_in? %>
        <div class="admin_panel" style="margin-left:220px;">
          <%= link_to 'Edit', edit_project_path(@projects[i]), :class => 'admin_control' %>
          <%= link_to 'Destroy', @projects[i], :confirm => 'Are you sure?', :method => :delete, :class => 'admin_control' %>
        </div>
      <% end %>
      <%= link_to image_tag(Picture.find(@projects[i].picture_id).data.url(:medium), :class => 'project_show_pic'), @projects[i] %>
    <% end %>
  <% end %> 
</div>