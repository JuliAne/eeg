<div class="admin">
  <h2>Sign in</h2>
  
  <% form_for :session, :url => session_path do |form| %>
    <p>
      <b>Email:</b><br />
      <%= form.text_field :email %>
    </p>
    <p>
      <b>Password:</b><br />
      <%= form.password_field :password %>
    </p>
    <%= form.submit "Sign in" %>
  <% end %>
  <p><br />
    <%= link_to "Forgot password?", new_password_path %>
  </p>
</div>
