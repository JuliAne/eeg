<%= javascript_include_tag :defaults %>

<h1>Editing post</h1>

<% form_for :post, :url => post_path(@post), :html => { :multipart => true, :method => 'put' } do  |f| %>
  <%= render :partial => 'formfields', :locals => { :f => f } %>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>