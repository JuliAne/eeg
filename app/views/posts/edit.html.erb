<div class="admin">
<h1>Editing post</h1>
<% form_for @post, :html => { :multipart => true } do |f| %>
  <%= render :partial => 'formfields', :locals => { :f => f } %>
  <h2>Submit</h2>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
</div>