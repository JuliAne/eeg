<% @posts.each do |post| %>
<div class="news_box">
	<div class="news_box_picture">
		<%= image_tag Picture.find(post.picture_id).data.url(:thumb) %>
	</div>
	<div class="news_box_text yellow">
		<%=h post.date_from %>
		<%=h post.time_from unless post.time_from.nil? %>
		bis 
		<%=h post.date_to %>
		<%=h post.time_to unless post.time_to.nil? %><br />
		<%=h post.title %><br />
		<%=h post.short_text %><br />
		<%= link_to 'Show', post %>
		<%= link_to 'Edit', edit_post_path(post) %>
		<%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
	</div>
</div>
<% end %>

<div id="content" class="news_box yellow">
<%= link_to 'New post', new_post_path %>
</div>