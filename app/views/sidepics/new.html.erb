<div class="admin">
<h1>New sidepic</h1>

<% form_for @sidepic, :html => { :multipart => true } do |f| %>
  <%= error_messages_for :sidepic, :picture %>

  <p>
    Don't forget the " http:// "!<br />
    <%= f.label :link %>
    <%= f.text_field :link %>
  </p>
  <p>
    <% fields_for :picture do |picture_form| %>
        Picture: <%= picture_form.file_field :data %><br />
        <%= picture_form.hidden_field :gallery_id, :value => "2" %>
        <%= picture_form.label :author %>
        <%= picture_form.text_field :author %>
    <% end %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sidepics_path %>
</div>
