<% content_for :html_title, @member.name.upcase %>
<% content_for :background, @member.background.data.url if @member.background %>

<% if signed_in? %>
  <div class="admin_panel">
    <%= link_to 'Edit', edit_element_path(@element), :class => 'admin_control' %>
    <%= link_to 'Destroy', @element, :confirm => 'Are you sure?', :method => :delete, :class => 'admin_control' %>
  </div>
<% end %>

<div class="c">
  <div class="c_element_show color2">
    <h1><%=h @element.title.upcase %></h1>
    <%= render_element_show(@member,@element) %>
  </div>
  <div style="float:right;">
    <div class="c_element color2">
          <p><br/>
        <b>Tags:</b><br/>
        <%= @element.tag_list %>
      </p>
    </div> 
    <% @member.elements.each_index do |i| %>
      <% if i >= 3 and i.odd? and @member.elements[i].id != @element.id %>
        <div class="c_element color2">
          <%= render_element(@member,@member.elements[i]) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
