<h1>Listing members</h1>

<table>
  <tr>
    <th class="tablehead">Name</th>
	<th class="tablehead">Position</th>
    <th class="tablehead">Information</th>
	<th class="tablehead">Picture</th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%=h member.name %></td>
	<td><%=h member.position %></td>


    <td><%=h member.info %></td>
	<td><%= image_tag Picture.find(member.picture_id).data.url(:thumb) %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New member', new_member_path %>