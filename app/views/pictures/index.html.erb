<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Data</th>
    <th>Caption</th>
	<th>Author</th>
	<th>Licence</th>
    <th>Tags</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%=h picture.id %></td>
    <td><%= image_tag picture.data.url(:thumb) %></td>
    <td><%=h picture.caption %></td>
	<td><%=h picture.author %></td>
	<td><%=h picture.licence %></td>
    <td>
      <% picture.tag_list.each do |t| %>
        <%=h t + " "%>
      <% end%>
    </td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_picture_path %>