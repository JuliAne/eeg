<h1>Editing picture</h1>

<% form_for :picture, @picture, :url => picture_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
  	<%= f.file_field :pic_file %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @picture %> |
<%= link_to 'Back', pictures_path %>