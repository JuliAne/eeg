<div class="admin">
<h1>Editing picture</h1>

<% form_for @picture, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :gallery %><br />
    <%= f.select :gallery_id, Gallery.all.collect {|p| [ p.title, p.id ] }, :include_blank => true %>
  </p>
  <p>
    <%= f.label :caption %><br />
    <%= f.text_field :caption %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :licence %><br />
    <%= f.text_field :licence %>
  </p>
  <p>
    <%= f.label :data %><br />
    <%= f.file_field :data %>
  </p>
  <p>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, :size => 80 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @picture %> |
<%= link_to 'Back', pictures_path %>
</div>