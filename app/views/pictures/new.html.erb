<h1>New picture</h1>

<% form_for @picture, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <p>
  	<%= f.file_field :pic_file %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', pictures_path %>