<%= javascript_include_tag :defaults %>

<h1>New element</h1>

<% form_for @element, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  <p>Specify a content type to upload:</p>
  <%= link_to_remote('text', :update => "dynamic_form",
    :url => {:action => '_text_form'}) %>
  <%= link_to_remote('video', :update => "dynamic_form",
    :url => {:action => '_video_form'}) %>
  <%= link_to_remote('file', :update => "dynamic_form",
    :url => {:action => '_file_form'}) %>
  <%= link_to_remote('gallery', :update => "dynamic_form",
    :url => {:action => '_gallery_form'}) %>
    <div id="dynamic_form"></div>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list, :size => 80 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', elements_path %>