<h1 class="c_element_head color2">Kontakt</h1>
<div class="r">
<div class="c_element_show color2" style="min-height:425px;">
<% unless flash[:notice] == "Your mail has been sent!" %>
<% form_for :mail, @mail, :url => {:action => "contact_send_mail" } do |f| %>
  <table style="margin-top:20px;margin-left:20px;">
    <tr>
      <td>Name: </td>
      <td><%= f.text_field :name, :size => 35, :maxlength => 255, :style => 'background-color:black;border:1px solid grey;color:white;' %></td>
    </tr>
    <tr>
      <td>Email: </td>
      <td><%= f.text_field :email, :size => 35, :maxlength => 255, :style => 'background-color:black;border:1px solid grey;color:white;' %></td>
    </tr>
    <tr>
      <td style="vertical-align:top;">Message: </td>
      <td><%= f.text_area :message, :style => 'background-color:black;border:1px solid grey;color:white;' %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "Send Message" %></td>
    </tr>
  </table>
<%end%>
<% else %>
  <p>Danke fÃ¼r deine Mail! Wir werden uns bei dir melden.</p>
<% end %>
</div>
</div>
